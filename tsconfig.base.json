{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@playground/container-lib": ["libs/container-lib/src/index.ts"],
      "@playground/games/code-master": ["libs/games/code-master/src/index.ts"],
      "@playground/games/games-shared": ["libs/games/games-shared/src/index.ts"],
      "@playground/games/hangman": ["libs/games/hangman/src/index.ts"],
      "@playground/shared/shared-lib": ["libs/shared/shared-lib/src/index.ts"],
      "@playground/games-shared/entry/*": ["libs/games/games-shared/src/lib/*"],
      "@playground/hangman/entry/*": ["libs/games/hangman/src/lib/*"],
      "@playground/code-master/entry/*": ["libs/games/code-master/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
